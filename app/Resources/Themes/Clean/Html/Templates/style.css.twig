{% extends '@theme_base/style.css.twig' %}

{% block theme_name        'clean' %}
{% block theme_description 'simple and minimalistic' %}
{% block theme_updated_at  '1/october/2012' %}

{# ==========================================================================
   @items
   ========================================================================== #}
{% block common %}
{{ parent() }}

.item {
    border-bottom: medium solid {{ color_silver }};
}
{% endblock %}

{% block cover %}
{{ parent() }}

.item.cover {
    border-bottom: thick solid {{ color_silver }};
    color: {{ color_black }};
    margin-bottom: .5em;
    padding: 1.5em 200px 1.75em 0;
}
.item.cover h1 {
    font-size: 64px;
    line-height: 1;
    letter-spacing: -2px;
    margin: 0;
}
.item.cover h2 {
    color: {{ color_gray }};
    font-size: 28px;
    font-weight: normal;
    margin-top: .5em;
}
{% endblock %}

{% block toc %}
{{ parent() }}

.item.toc {
    border: none;
}

.item.toc h1 {
    color: {{ color_gray }};
    font-size: 21px;
    font-weight: normal;
}

.item.toc ul {
    padding: 0;
}

.item.toc ul li {
    font-size: 14px;
}

.item.toc ul li span {
    font-weight: bold;
}

.item.toc ul li a {
    text-decoration: none;
}

.item.toc ul li a:hover {
    text-decoration: underline;
}

.item.toc ul li.level-1 {
    border-top: 1px solid {{ color_silver }};
    margin-top: .5em;
    padding-top: .5em;
}
.item.toc h1 + ul li.level-1:first-child {
    border-top: 0;
    padding: 0;
}
{% endblock %}

{% block title %}
.item.title {
    display: none;
}
{% endblock %}

{% block dedication %}
{{ parent() }}

.item.dedication {
    font-style: italic;
    text-align: center;
}
{% endblock %}

{% block part %}
{{ parent() }}

.item.part {
    border: solid {{ color_gray }};
    border-width: medium 0;
    padding: 0;
}

.item + .item.part {
    margin-top: -2em;
}

.item.part h1 {
    font-size: 36px;
    margin: 0;
    padding: 1em 0;
    text-align: center;
}
.item.part h1 span {
    color: {{ color_gray }};
    font-size: 80%;
    font-weight: normal;
    padding-bottom: .25em;
}
{% endblock %}

{% block chapter %}
{{ parent() }}

.item.chapter h1 {
    font-size: 28px;
    margin-top: 0;
}

.item.chapter h1 span {
    display: block;
    font-size: 24px;
    font-weight: normal;
    line-height: 1.5;
}
{% endblock %}

{% block appendix %}
{{ parent() }}

.item.appendix h1 {
    font-size: 28px;
    margin-top: 0;
}

.item.appendix h1 span {
    display: block;
    font-size: 24px;
    font-weight: normal;
    line-height: 1.5;
}
{% endblock %}

{# ==========================================================================
   @responsive
   ========================================================================== #}
{% block tablets %}
{{ parent() }}

body {
    font-size: 15px;
}

.item.cover h1 {
    font-size: 48px;
}
.item.cover h2 {
    font-size: 21px;
}

.item.toc h1 {
    font-size: 16px;
}
.item.toc li {
    font-size: 13px;
}
{% endblock %}

{% block tablets_and_phones %}
{{ parent() }}

.item.cover {
    padding-right: 1em;
}

.item.cover h1 {
    font-size: 36px;
    letter-spacing: 0;
}
.item.cover h2 {
    font-size: 21px;
}
{% endblock %}

{% block phones %}
{{ parent() }}

body {
    font-size: 14px;
}

h1 { font-size: 21px !important; } h1 span { font-size: inherit !important; }
h2 { font-size: 18px !important; }
h3 { font-size: 16px !important; }
h4 { font-size: 16px !important; }
h5 { font-size: 16px !important; }
h6 { font-size: 16px !important; }

.item.cover h1 {
    font-size: 28px !important;
}
.item.cover h2 {
    font-size: 18px !important;
}

.item.toc {
    display: none;
}
{% endblock %}
