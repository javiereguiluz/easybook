{% extends '@theme_base/style.css.twig' %}

{% block theme_name        'clean' %}
{% block theme_description 'simple and minimalistic' %}
{% block theme_updated_at  '2/october/2012' %}

{# ==========================================================================
   @typography
   ========================================================================== #}
{% block body %}
{{ parent() }}

body {
    margin: 0;
}
{% endblock %}

{# ==========================================================================
   @navigation
   ========================================================================== #}
{% block menu %}
{{ parent() }}

.item .menu {
    background: {{ color_black }};
    color: {{ color_gray }};
    margin-bottom: 1em;
    min-height: 50px;
}

.item .menu a {
    color: {{ color_white }};
    font-weight: 400;
    line-height: 50px;
    text-decoration: none;
}
.item .menu a.disabled {
    color: {{ color_gray }} !important;
}
.item .menu a:hover {
    text-decoration: underline;
}

.item .menu h1 {
    margin-bottom: 0;
}
.item .menu h1 a {
    display: block;
    font-size: 21px;
    padding-left: .5em;
}
.item .menu p {
    margin-bottom: 0;
    margin-top: 0;
}
.item .menu p a {
    margin: 0 .75em 0;
}

{% endblock %}

{# ==========================================================================
   @items
   ========================================================================== #}
{% block cover %}
{{ parent() }}

.item.cover {
    border-bottom: thick solid {{ color_silver }};
    color: {{ color_black }};
    margin-bottom: 1.5em;
    padding: 5em 200px 1.75em 0;
}
.item.cover h1 {
    font-size: 64px;
    line-height: 1;
    letter-spacing: -2px;
    margin: 0;
}
.item.cover h2 {
    color: {{ color_gray }};
    font-size: 28px;
    font-weight: normal;
    margin-top: .5em;
}
{% endblock %}

{% block toc %}
{{ parent() }}
.item.toc {
    margin-bottom: 2em;
    padding-left: 0;
}

.item.toc h1 {
    font-size: 36px;
    margin-bottom: .5em;
}

.item.toc ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    -moz-column-count: 2;
    -moz-column-gap: 3em;
    -moz-column-rule: 1px solid {{ color_silver }};
    -webkit-column-count: 2;
    -webkit-column-gap: 3em;
    -webkit-column-rule: 1px solid {{ color_silver }};
}

.item.toc ul li,
.item.toc ul li a {
    font-size: 16px;
    line-height: 1.2;
    text-decoration: none;
}
.item.toc ul li a {
    color: {{ color_blue }};
}
.item.toc ul li a:hover {
    color: {{ color_blue }} !important;
    text-decoration: underline;
}
.item.toc ul li.level-1,
.item.toc ul li.level-1 a {
    color: {{ color_black }};
    font-size: 21px;
    font-weight: bold;
}
.item.toc ul li span {
    color: {{ color_gray }};
    padding-right: .3em;
}
.item.toc ul li.level-1 span {
    font-weight: normal;
}

.item.toc ul li.level-2 {
    margin-left: 1em;
}
.item.toc ul li.level-3,
.item.toc ul li.level-4,
.item.toc ul li.level-5,
.item.toc ul li.level-6 {
    margin-left: 3em;
}

{# local navigation TOC for each chapter, appendix, ... #}
.item .local_toc {
    border: none;
}

.item .local_toc h3 {
    color: {{ color_gray }};
    font-size: 21px;
    font-weight: normal;
}

.item .local_toc ul {
    padding: 0;
}

.item .local_toc ul li {
    font-size: 14px;
}

.item .local_toc ul li span {
    font-weight: bold;
}

.item .local_toc ul li a {
    text-decoration: none;
}

.item .local_toc ul li a:hover {
    text-decoration: underline;
}

.item .local_toc ul li.level-1 {
    border-top: 1px solid {{ color_silver }};
    margin-top: .5em;
    padding-top: .5em;
}
.item .local_toc h3 + ul li.level-1:first-child {
    border-top: 0;
    padding: 0;
}
{% endblock %}

{% block title %}
.item.title {
    display: none;
}
{% endblock %}

{% block dedication %}
{{ parent() }}

.item.dedication {
    font-style: italic;
    text-align: center;
}
{% endblock %}

{% block lof %}
{{ parent() }}

.item.lof ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.item.lof ul a {
    text-decoration: none;
}

.item.lof ul li span {
    padding-right: .3em;
}
{% endblock %}

{% block lot %}
{{ parent() }}

.item.lot ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.item.lot ul a {
    text-decoration: none;
}

.item.lot ul li span {
    padding-right: .3em;
}
{% endblock %}

{% block part %}
{{ parent() }}

.item.part {
    border: solid {{ color_gray }};
    border-width: medium 0;
    padding: 0;
}

.item + .item.part {
    margin-top: -2em;
}

.item.part h1 {
    font-size: 36px;
    margin: 0;
    padding: 1em 0;
    text-align: center;
}
.item.part h1 span {
    color: {{ color_gray }};
    font-size: 80%;
    font-weight: normal;
    padding-bottom: .25em;
}
{% endblock %}

{% block chapter %}
{{ parent() }}

.item.chapter h1 {
    font-size: 28px;
    margin-top: 0;
}

.item.chapter h1 span {
    display: block;
    font-size: 24px;
    font-weight: normal;
    line-height: 1.5;
}
{% endblock %}

{% block appendix %}
{{ parent() }}

.item.appendix h1 {
    font-size: 28px;
    margin-top: 0;
}

.item.appendix h1 span {
    display: block;
    font-size: 24px;
    font-weight: normal;
    line-height: 1.5;
}
{% endblock %}

{# ==========================================================================
   @responsive
   ========================================================================== #}
{% block tablets %}
{{ parent() }}

body {
    font-size: 15px;
}

.item.cover h1 {
    font-size: 48px;
}
.item.cover h2 {
    font-size: 21px;
}

.item.toc h3 {
    font-size: 16px;
}
.item.toc ul li.level-1, .item.toc ul li.level-1 a {
    font-size: 18px;
}
.item.toc ul li, .item.toc ul li a {
    font-size: 14px;
}
.item.toc li.level-1 span {
    display: block;
    font-size: 90%;
}

.item .menu p a {
    margin: 0 .3em 0;
}
{% endblock %}

{% block tablets_and_phones %}
{{ parent() }}

.item.cover {
    padding-right: 1em;
}

.item.cover h1 {
    font-size: 36px;
    letter-spacing: 0;
}
.item.cover h2 {
    font-size: 21px;
}

.item.toc ul li.level-1, .item.toc ul li.level-1 a {
    font-size: 16px;
}
.item.toc ul li, .item.toc ul li a {
    font-size: 13px;
}
.item.toc li.level-1 span {
    display: block;
    font-size: 90%;
}

.item .menu h1 {
    float: left;
    margin-left: 20px;
    width: auto;
}
.item .menu h1 a {
    padding-left: 0;
}
.item .menu p {
    float: right;
    width: auto;
}
.item .menu p a {
    margin: 0 .3em 0;
}
{% endblock %}

{% block phones %}
{{ parent() }}

body {
    font-size: 14px;
}

h1 { font-size: 21px !important; } h1 span { font-size: inherit !important; }
h2 { font-size: 18px !important; }
h3 { font-size: 16px !important; }
h4 { font-size: 16px !important; }
h5 { font-size: 16px !important; }
h6 { font-size: 16px !important; }

.item.cover h1 {
    font-size: 28px !important;
}
.item.cover h2 {
    font-size: 18px !important;
}

.item.toc {
    padding-left: .5em !important;
}
.item.toc h1 {
    display: none;
}
.item.toc ul {
    margin: 0 !important;
    -moz-column-count: 1;
    -webkit-column-count: 1;
}

.item .local_toc {
    display: none;
}

.item .menu h1 {
    display: none;
}
.item .menu p {
    width: 100%;
}
.item .menu p a:first-child {
    float: left;
}
.item .menu p a:last-child {
    float: right;
}
{% endblock %}
