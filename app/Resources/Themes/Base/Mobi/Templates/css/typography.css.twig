{% block typography %}
/* ==========================================================================
   @typography
   ========================================================================== */
{% block body %}
/* @body
   -------------------------------------------------------------------------- */
body {
    color: {{ color_black }};
}
{% endblock %}
{% block links %}
/* @links
   -------------------------------------------------------------------------- */
{% endblock %}
{% block headings %}
/* @headings
   -------------------------------------------------------------------------- */
h1, h2, h3, h4, h5, h6 {
    font-weight: bold;
    line-height: 1;
    margin: 1em 0 .25em 0;
}

h1 { font-size: 2em; }
h2 { font-size: 1.41667em; }
h3 { font-size: 1.125em; }
h4 { font-size: 1em; }
h5 { font-size: 1em; }
h6 { font-size: 1em; }

h1 + p, h2 + p, h3 + p, h4 + p, h5 + p, h6 + p {
    margin-top: .25em;
}
{% endblock %}
{% block paragraphs %}
/* @paragraphs
   -------------------------------------------------------------------------- */
p {
    margin: 1em 0;
}
{% endblock %}
{% block lists %}
/* @lists
   -------------------------------------------------------------------------- */
ul, ol {
    list-style-type: disc;
    margin: 1em 0 1em 1em;
    padding: 0 0 0 1.5em;
}

ol {
    list-style-type: decimal;
}

ul li, ol li {
    margin: .5em 0;
}

ul.unstyled,
ol.unstyled {
  margin-left: 0;
  list-style: none;
}

dl {
  margin-bottom: 1em;
}

dt {
  font-weight: bold;
}

dd {
  margin-left: 1em;
}
{% endblock %}
{% block misc %}
/* @misc
   -------------------------------------------------------------------------- */
blockquote {
    margin: 1em 0 1em 3em;
}

.left   { float: left;  }
.right  { float: right; }
.center { text-align: center; }
{% endblock %}
{% endblock %}
