{% block toc %}
/* @toc
   -------------------------------------------------------------------------- */
.item.toc {
    page: no-header;
}

.item.toc ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}
.item.toc ul li,
.item.toc ul li a,
.item.toc ul li a code {
    border: none;
    color: inherit;
    line-height: 1.1;
    text-decoration: none;
}
.item.toc li a::after {
    color: inherit;
    content: leader('. ') target-counter(attr(href), page);
}
.item.toc ul li.level-1,
.item.toc ul li.level-1 a {
    font-size: 15pt;
    font-weight: bold;
}
.item.toc ul li span {
    font-weight: normal;
    padding-right: .2em;
}

.item.toc ul li.level-2,
.item.toc ul li.level-3,
.item.toc ul li.level-4,
.item.toc ul li.level-5,
.item.toc ul li.level-6 {
    font-size: 13pt;
    margin-left: 1em;
}
