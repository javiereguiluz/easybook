{% block layout %}
/* ==========================================================================
   @layout
   ========================================================================== */
@page {
    size: {{ edition.page_size }};
}

{% if edition.two_sided %}
@page:right {
    margin: {{ edition.margin.top|default('25mm') }} {{ edition.margin.outer|default(edition.margin.outter)|default('20mm') }} {{ edition.margin.bottom|default('25mm') }} {{ edition.margin.inner|default('30mm') }};

    @top-left {
        border-bottom: 1px solid {{ color_silver }};
        color: {{ color_gray }};
        font: 9pt tex-heros, sans-serif;
        margin-bottom: 12pt;
        padding-bottom: 3pt;
        vertical-align: baseline;
    }

    @top-right {
        border-bottom: 1px solid {{ color_silver }};
        color: {{ color_gray }};
        font: 9pt tex-heros, sans-serif;
        margin-bottom: 12pt;
        padding-bottom: 3pt;
        vertical-align: baseline;
    }

    @bottom-right {
        font: bold 12pt tex-heros, sans-serif;
        padding-top: 11pt;
        vertical-align: top;
    }

    @bottom-left {
    }
}

@page:left {
    margin: {{ edition.margin.top|default('25mm') }} {{ edition.margin.inner|default('30mm') }} {{ edition.margin.bottom|default('25mm') }} {{  edition.margin.outer|default(edition.margin.outter)|default('20mm') }};

    @top-left {
        border-bottom: 1px solid {{ color_silver }};
        color: {{ color_gray }};
        font: 9pt tex-heros, sans-serif;
        margin-bottom: 12pt;
        padding-bottom: 3pt;
        vertical-align: baseline;
    }

    @top-right {
        border-bottom: 1px solid {{ color_silver }};
        color: {{ color_gray }};
        font: 9pt tex-heros, sans-serif;
        margin-bottom: 12pt;
        padding-bottom: 3pt;
        vertical-align: baseline;
    }

    @bottom-left {
        font: bold 12pt tex-heros, sans-serif;
        padding-top: 11pt;
        vertical-align: top;
    }

    @bottom-right {
    }
}
{% else %}
@page {
    margin: {{ edition.margin.top|default('25mm') }} {{ edition.margin.outer|default(edition.margin.outter)|default('20mm') }} {{ edition.margin.bottom|default('25mm') }} {{ edition.margin.inner|default('30mm') }};

    @top-left {
        border-bottom: 1px solid {{ color_silver }};
        font: 9pt tex-heros, sans-serif;
        margin-bottom: 12pt;
        padding-bottom: 3pt;
        vertical-align: bottom;
    }

    @top-right {
        border-bottom: 1px solid {{ color_silver }};
        font: 9pt tex-heros, sans-serif;
        margin-bottom: 12pt;
        padding-bottom: 3pt;
        vertical-align: bottom;
    }

    @bottom-right {
        font: bold 12pt tex-heros, sans-serif;
        padding-top: 11pt;
        vertical-align: top;
    }

    @bottom-left {
    }
}
{% endif %}

@page no-header-footer {
    @top-left     { content: ''; border: none; }
    @top-right    { content: ''; border: none; }
    @bottom-left  { content: ''; border: none; }
    @bottom-right { content: ''; border: none; }
}

@page no-header {
    @top-left  { content: ''; border: none; }
    @top-right { content: ''; border: none; }
}

@page no-footer {
    @bottom-left  { content: ''; border: none; }
    @bottom-right { content: ''; border: none; }
}

@page cover {
    @top-left     { content: ''; border: none; }
    @top-right    { content: ''; border: none; }
    @bottom-left  { content: ''; border: none; }
    @bottom-right { content: ''; border: none; }
}
{% endblock %}
