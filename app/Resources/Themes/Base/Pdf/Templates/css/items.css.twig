{% block lof %}
/* @lof
   -------------------------------------------------------------------------- */
.item.lof {
    page: no-header;
}

.item.lof ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.item.lof ul a {
    border: none;
    color: inherit !important;
    text-decoration: none;
}
.item.lof a::after {
    color: inherit;
    content: leader('. ') target-counter(attr(href), page);
    margin-left: .5em;
}

.item.lof ul li {
    margin: 0 0 .5em 0;
}

.item.lof ul li span {
    padding-right: .5em;
}
{% endblock %}
