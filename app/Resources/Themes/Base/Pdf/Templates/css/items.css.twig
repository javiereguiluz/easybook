{% block cover %}
/* @cover
   -------------------------------------------------------------------------- */
.item.cover {
    page: cover;
}
.item.cover h1 {
    color: {{ color_black }};
    font-family: tex-heros, sans-serif;
    font-size: 48pt;
    hyphens: none;
    line-height: 1.1;
    margin-bottom: .25em;
    padding: 3em 2em 0 0;
    text-align: left;
    text-transform: uppercase
}
.item.cover h2 {
    color: {{ color_gray }};
    font-family: tex-heros, sans-serif;
    font-size: 24pt;
    font-weight: normal;
    text-align: left;
    margin-top: 0;
    text-transform: uppercase
}

