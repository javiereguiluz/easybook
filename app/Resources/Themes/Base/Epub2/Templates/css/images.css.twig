{% block images %}
/* ==========================================================================
   @images
   ========================================================================== */
img {
  height: auto;
  max-width: 100%;
  vertical-align: middle;
  border: 0;
}

.left img {
    float: left;
    margin: 0 1em 1em 0;
}

.right img {
    float: right;
    margin: 0 0 1em 1em;
}

.center img {
    display: block;
    text-align: center;
}
{% endblock %}