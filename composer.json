{
    "name": "easybook/easybook",
    "bin": [
        "bin/book"
    ],
    "description": "Book publishing application",
    "keywords": ["book", "publish", "ebook", "e-book", "documentation", "pdf", "epub"],
    "homepage": "http://easybook-project.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Javier Eguiluz",
            "email": "javier.eguiluz@gmail.com",
            "homepage": "http://javiereguiluz.com"
        },
        {
            "name": "Contributors",
            "homepage": "http://github.com/javiereguiluz/easybook/blob/master/CONTRIBUTORS.md"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "ext-zip": "*",
        "ext-gd": "*",
        "easybook/geshi": "^1.0",
        "javiereguiluz/easyslugger": "^1.0",
        "michelf/php-markdown": "^1.4",
        "symfony/console": "^4.1",
        "symfony/dependency-injection": "^4.1",
        "symfony/event-dispatcher": "^4.1",
        "symfony/filesystem": "^4.1",
        "symfony/finder": "^4.1",
        "symfony/process": "^4.1",
        "symfony/yaml": "^4.1",
        "symplify/package-builder": "^4.6",
        "twig/twig": "^2.5",
        "zendframework/zendpdf": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.10.3",
        "phpunit/phpunit": "^7.3",
        "rector/rector": "^0.3.4",
        "slam/php-cs-fixer-extensions": "^1.15",
        "symplify/easy-coding-standard": "^4.6"
    },
    "autoload": {
        "psr-4": {
            "Easybook\\": "src/Easybook"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Easybook\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check src tests",
        "fix-cs": "vendor/bin/ecs check src tests --fix",
        "phpstan": "vendor/bin/phpstan analyse src tests --level max"
    }
}
