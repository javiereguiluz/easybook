--TEST--
Book with some dynamic options defined by Twig expressions via configuration file and via --configuration command option..
--COMMAND_CONFIG--
{
  "book": {
    "title": "{{ book.author }} diary",
    "author": "John Smith"
  }
}
--BOOK_CONFIG--
book:
    edition:          "{{ 'First' ~ ' ' ~ 'edition' }}"
    language:         "{{ ['es', 'fr', 'en']|reverse|first }}"
    publication_date: "{{ 'yyyy-mm-dd'|upper }}"
    generator:
        version:      "N"
# uncomment this when the BookConfigurator->processConfigurationValues()
# works recursively
#        version:      " {{ 10 // 3 }}"
--EXPECT--
book:
    title: John Smith diary
    author: John Smith
    edition: First edition
    language: en
    publication_date: YYYY-MM-DD
    generator: { name: easybook, version: N }
    contents: null
    editions: null
